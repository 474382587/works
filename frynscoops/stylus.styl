section:first-of-type
  position relative
  overflow hidden
  margin-top: 128px
  &>div
    z-index 3
    position: absolute
    top 40%
    padding: 4px
  &>div:hover
    cursor pointer
  &>#next
    right 0
    &:before
      content: ''
      display: block
      width: 0
      height: 0
      border: 40px solid transparent
      border-left-color: #66d9c1
  &>#previous
    left 0
    &:before
      content: ''
      display: block
      width: 0
      height: 0
      border: 40px solid transparent
      border-right-color: #66d9c1

  .slider
    &
      overflow: hidden
    li
      font-size: 0
      overflow hidden
      opacity 0
      z-index 1
      position relative
      float: left
      margin-right: -100%;
      display: block;
      width: 100%;
      transition: opacity 1s
      &::after
        content: ''
        position: absolute
        left: 0
        top: 0
        display: block
        width: 100%
        height 100%
        background-color: #000000
        opacity .2
        z-index 1
      img
        width: 100%
        height: auto
      div
        position: absolute
        top: 34%
        left: 0;
        right: 0;
        text-align: center
        z-index: 2
        &>* {
          margin-bottom: 10px
          }
        h2
          font-family: cursive
          color: white
          font-size: 72px
        div.separator
          position: static
          height: 23px;
          background url(separate.png) center center no-repeat
        a
          display: inline-block
          padding: 24px 41px
          font-size: 24px
          color: white
          background-color #282424
          font-weight: 800
          // margin-top: 40px
        p
          color: white
          font-size 24px
          font-weight: bold
        @media screen and (max-width 1200px)
          h2
            font-size: 58px
          a
            font-size: 22px
            padding: 20px 36px
          p
            font-size: 22px
        @media screen and (max-width 991px)
          h2
            font-size: 38px
          a
            font-size: 16px
            padding: 14px 22px
          p
            font-size: 16px
        @media screen and (max-width 767px)
          h2
            font-size: 24px
          a
            font-size: 14px;
            padding: 10px 15px;
          .content>.separator,.content>p
            display: none
        @media screen and (max-width 480px)
          h2,a
            display: none
    li.active
      z-index 2
      opacity 1
@media screen and (max-width: 850px)
  section:first-of-type
    margin-top: 102px
@media screen and (max-width: 960px){
  section:first-of-type>#next::before,section:first-of-type>#previous::before{
      border-width: 20px
    }
}

section.why-us
  position relative 
  .curve
    z-index 3
    top -70px
    height 70px
    width 100%
    overflow hidden
    position absolute
    &::before
      position absolute
      top -190px
      left -10%
      content ''
      display block
      width 120%
      height 250px
      // background-color yellow
      box-shadow 0 0 0 100px #66d9c1
      border-radius 100%
  &>.content
    padding 20px 0 120px
    background-color #66d9c1
    text-align center
    h2
      color white
      font-size 48px
      font-weight 500
      margin-bottom 20px
    p 
      color #357165
      font-size 20px
  .card-wrapper
    margin-top -110px
    display flex
    flex-wrap wrap
    padding 20px 40px
    .card
      text-align center
      width 25%
      &>.content
        padding 0 20px 20px
        h3
          line-height 1.5
          margin-bottom 10px
        p
          line-height 1.4
      .image-wrapper
        margin 0 auto
        height 176px
        width 176px
        border 2px dotted rgba(255,255,255,0.4)
        border-radius 50%
        padding 2px
        a
          height 100%
          width 100%
          display block
          border-radius 50%
          background-color rgba(255,255,255,0.4)
          position relative
          img 
            vertical-align: middle;
            position absolute
            top 0px
            bottom 0px
            left 0px
            right 0px
            margin auto

section.ourworks
  text-align center 
  .content
    padding-bottom 40px
    h2
      font-size 48px
      margin-bottom 20px
    p
      font-size 20px
  .gallery
    display flex
    flex-wrap wrap
    .image-wrapper
      width 20%
      position relative
      box-shadow 0 0 0 2px white
      img
        width 100%
        height 100%
      .overlay
        transition opacity .3s
        position absolute
        top 0px
        left 0px
        content ''
        height 100%
        width 100%
        opacity 0
        background-color rgba(255,255,255,.8)
        a
          position absolute
          top 45%
          left 0px
          right 0px
    .image-wrapper:hover
      .overlay
        opacity 1


@media screen and (max-width 1200px)
  section.why-us
    .curve
      display none
  section.ourworks
    .gallery
      .image-wrapper
        width 25%
      &>.image-wrapper:nth-child(9),
      &>.image-wrapper:nth-child(10)
        display none 

@media screen and (max-width 991px)
  section.why-us
    .content
      h2
        font-size 36px
      p 
        font-size 16px
    .card-wrapper
      .card
        width 50%
        
@media screen and (max-width 650px)
  section.why-us>.card-wrapper
      .card
        width 100%
  section.ourworks
    .gallery
      .image-wrapper
        width 50%
      &>.image-wrapper:nth-child(6),
      &>.image-wrapper:nth-child(7)
      &>.image-wrapper:nth-child(8)
      &>.image-wrapper:nth-child(5)
        display none 



